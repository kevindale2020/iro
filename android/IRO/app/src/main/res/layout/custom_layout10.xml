<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/image_circle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="8dp"
        app:cardCornerRadius="64dp">

        <android.support.v7.widget.CardView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            app:cardCornerRadius="64dp">

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/iro_logo_small2" />


        </android.support.v7.widget.CardView>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/image_circle"
        android:layout_toRightOf="@id/image_circle"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/subject"
        android:layout_toRightOf="@id/image_circle"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/content"
        android:layout_toRightOf="@id/image_circle"
        android:textSize="16sp" />

    <!--<TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/name"
        android:text="tae"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:textSize="16sp" />-->


    <ImageView
        android:id="@+id/icon_delete"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/subject"
        android:layout_marginRight="5dp"
        android:background="@drawable/ic_delete_black_24dp"
        android:clickable="true"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/icon_decline"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/date"
        android:layout_marginRight="5dp"
        android:background="@drawable/ic_close_black_24dp"
        android:clickable="true"
        android:visibility="gone"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/icon_accept"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/date"
        android:layout_marginRight="40dp"
        android:background="@drawable/ic_done_black_24dp"
        android:clickable="true"
        android:visibility="gone"
        android:scaleType="centerCrop" />


